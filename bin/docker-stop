#!/bin/bash

if [ -z "$1" ]; then
    echo "Usage: $0 <container_name|all>"
    exit 1
fi

if [ "$1" == "all" ]; then
    # Stop all running containers
    docker stop $(docker ps -q)
    echo "All containers have been stopped."
else
    CONTAINER_NAME=$1
    CONTAINER_ID=$(docker ps -q -f ancestor=$CONTAINER_NAME)

    # If no container was found, try searching by ID
    if [ -z "$CONTAINER_ID" ]; then
        CONTAINER_ID=$(docker ps -q -f id=$CONTAINER_NAME)
    fi

    # Check if the container is running
    if [ -z "$CONTAINER_ID" ]; then
        echo "Container $CONTAINER_NAME is not running."
        exit 1
    fi

    # Stop the specified container
    docker stop $CONTAINER_ID
    echo "Container $CONTAINER_NAME has been stopped."
fi